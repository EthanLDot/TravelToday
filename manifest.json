{
    "manifest_version": 2,
    "name": "TravelToday",
    "version": "1.0",

    "background": {
        "persistent": false,
        "scripts": ["background.js"]
    },
    
    "content_scripts": [{
        "matches": [
            "<all_urls>"
        ],
        "all-frames": true,
        "js": ["content_script.js"],
        "run_at": "document_end"
    }],
    "browser_action": {
        "default_icon": {
            "16": "images/pen16.png",
            "48": "images/pen48.png",
            "128": "images/pen128.png"
        },
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "images/pen16.png",
        "48": "images/pen48.png",
        "128": "images/pen128.png"
    },
    "permissions": [
        "activeTab", "tabs", "contextMenus"
    ],
    "web_accessible_resources": [
        "countryName.json", "countryName2.json"
    ]
}
